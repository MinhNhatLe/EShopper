@model AdvancedEShop.Models.Entities.Category
@using Microsoft.AspNetCore.Http
@{
    var User = Context.Session.GetString("User");
    if (User != null)
    {
        Context.Response.Redirect("/Home/Index");
    }
    var Admin = Context.Session.GetString("Admin");
    if (Admin != null)
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    if (User == null && Admin == null)
    {
        Context.Response.Redirect("/Authorization/SignIn");
    }
}
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryPhoto" class="control-label"></label>
                <input asp-for="CategoryPhoto" class="form-control" />
                <span asp-validation-for="CategoryPhoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryOder" class="control-label"></label>
                <input asp-for="CategoryOder" class="form-control" />
                <span asp-validation-for="CategoryOder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
