@model AdvancedEShop.Models.Entities.Category
@using Microsoft.AspNetCore.Http
@{
    var User = Context.Session.GetString("User");
    if (User != null)
    {
        Context.Response.Redirect("/Home/Index");
    }
    var Admin = Context.Session.GetString("Admin");
    if (Admin != null)
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    if (User == null && Admin == null)
    {
        Context.Response.Redirect("/Authorization/SignIn");
    }
}
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryPhoto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryPhoto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryOder)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryOder)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CategoryId">Edit</a> |
